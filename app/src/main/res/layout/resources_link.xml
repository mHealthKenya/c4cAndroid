<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_alignParentBottom="true"
    android:background="#fffff0">



    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/resourcestoolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/colorPrimary"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    </android.support.design.widget.AppBarLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:layout_alignParentTop="true"
        >

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/link1"
                android:layout_marginTop="20sp"
                android:textStyle="bold|italic"
                android:text="An orientation guide for health workers in health care waste management: 2015:"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/link2"
                android:layout_marginTop="20sp"
                android:textStyle="bold|italic"
                android:text="Health care waste management strategic plan; 2015-2020"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/link3"
                android:layout_marginTop="20sp"
                android:textStyle="bold|italic"
                android:text="Kenya ARV Guidelines 2018"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/link4"
                android:layout_marginTop="20sp"
                android:textStyle="bold|italic"
                android:text="National infection prevention and control guidelines for health care services in Kenya: 2015"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/link5"
                android:layout_marginTop="20sp"
                android:textStyle="bold|italic"
                android:text="Occupational health and safety policy guidelines for the health sector in Kenya: 2014"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/link6"
                android:layout_marginTop="20sp"
                android:textStyle="bold|italic"
                android:text="National Policy on Prevention and containment of Antimicrobial Resistance; 2017"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/link7"
                android:layout_marginTop="20sp"
                android:textStyle="bold|italic"
                android:text="National Antimicrobial Resistance Surveillance Strategy; 2018-2022; National"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/link8"
                android:layout_marginTop="20sp"
                android:textStyle="bold|italic"
                android:text="National infection prevention and control policy; 2015"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:id="@+id/link9"
                android:layout_marginTop="20sp"
                android:textStyle="bold|italic"
                android:text="Kenya injection safety policy; 2018"
                android:layout_height="wrap_content" />




        </LinearLayout>
    </ScrollView>
</LinearLayout>
